<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.yst.study.doit.book.part3.ButtonSample"
    >

    <Button
        android:id="@+id/doit_part3_naver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickOpenNaver"
        android:text="네이버 접속"/>

    <Button
        android:id="@+id/doit_part3_calling_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doit_part3_naver_btn"
        android:onClick="onClickCalling"
        android:text="전화 걸기"/>

    <Button
        android:id="@+id/doit_part3_new_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doit_part3_calling_btn"
        android:onClick="onClickNewActivity"
        android:text="새화면 띄우기"/>

</RelativeLayout>